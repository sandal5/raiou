---
const { blok } = Astro.props

const businesses = [
  {
    id: 'medical',
    icon: '🏥',
    title: '医療用消耗品',
    subtitle: 'より良い医療ケアを実現',
    description: '中日間の医療品質パートナーシップにより、医療防護・臨床ケア・家庭健康監測のニーズに対応。日本基準による厳格な品質管理。',
    features: ['日本品質基準', 'トレーサビリティ完備', '継続的サポート'],
    link: '/medical',
  },
  {
    id: 'supplements',
    icon: '💊',
    title: 'ウェルネス製品',
    subtitle: '科学的栄養で健康をサポート',
    description: '日本のトップブランドとの直接協力により、天然・安全・効果的の原則に基づいた高品質の健康製品をお届けします。',
    features: ['自然由来成分', '安全認証済み', '科学的根拠'],
    link: '/wellness',
  },
  {
    id: 'badminton',
    icon: '🏸',
    title: 'スポーツ用品',
    subtitle: 'プロフェッショナルな装備',
    description: '初心者からプロまで、国際バドミントン規格に対応した包括的なスポーツ装備を提供。品質と価値を兼ね備えています。',
    features: ['国際規格準拠', '高性能', 'エキスパートサポート'],
    link: '/sports',
  },
  {
    id: 'tourism',
    icon: '✈️',
    title: '旅行サービス',
    subtitle: 'カスタマイズされた日本体験',
    description: 'ビザサポート、完全カスタマイズされた旅行プラン、ホテル予約、24時間緊急対応サービスで、心からの旅をお約束します。',
    features: ['完全カスタマイズ', 'ビザサポート', '24時間対応'],
    link: '/travel',
  },
]
---

<section class="py-20 md:py-32 bg-background">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-6">
        {blok.title || 'ライオウのサービス'}
      </h2>
      <p class="text-xl text-muted max-w-2xl mx-auto">
        {blok.description || '医療・健康・スポーツ・旅行における、包括的で質の高いサービスをお提供します。'}
      </p>
    </div>

    <!-- Business cards grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {businesses.map((business) => (
        <a
          href={business.link}
          class="group relative overflow-hidden rounded-lg border border-card-border bg-card p-8 hover:shadow-lg transition-all duration-300"
        >
          <!-- Background accent -->
          <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-accent-blue/20 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

          <!-- Content -->
          <div class="relative z-10">
            <div class="text-5xl mb-4">{business.icon}</div>

            <h3 class="text-xl font-bold text-primary mb-2">
              {business.title}
            </h3>

            <p class="text-accent-amber text-sm font-medium mb-3">
              {business.subtitle}
            </p>

            <p class="text-muted text-sm leading-relaxed mb-4">
              {business.description}
            </p>

            <!-- Features -->
            <div class="space-y-2">
              {business.features.map((feature) => (
                <div class="flex items-center text-sm text-muted">
                  <span class="w-1.5 h-1.5 bg-accent-blue rounded-full mr-2"></span>
                  {feature}
                </div>
              ))}
            </div>

            <!-- Arrow indicator -->
            <div class="mt-6 inline-flex items-center text-accent-blue font-medium group-hover:translate-x-2 transition-transform duration-300">
              詳細を見る
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
