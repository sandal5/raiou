---
const { blok } = Astro.props
---

<section class="py-20 md:py-32 bg-primary text-white relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-pattern"></div>
  </div>

  <div class="relative container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left content -->
      <div>
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          {blok.title || 'ご連絡・お問合せ'}
        </h2>
        <p class="text-xl text-gray-200 mb-8 leading-relaxed">
          {blok.description || 'ご質問やご相談がございましたら、お気軽にお問合せください。専門チームが丁寧にサポートさせていただきます。'}
        </p>

        <!-- Contact info -->
        <div class="space-y-6 mb-8">
          <div class="flex items-start">
            <svg class="w-6 h-6 mr-4 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            <div>
              <div class="font-bold">メール</div>
              <a href="mailto:info@raiou.co.jp" class="text-gray-200 hover:text-white transition-colors">
                info@raiou.co.jp
              </a>
            </div>
          </div>

          <div class="flex items-start">
            <svg class="w-6 h-6 mr-4 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773c.02.04.04.082.06.124.127.263.27.565.427.89.46.889.992 1.900 1.696 2.604.704.704 1.715 1.236 2.604 1.696.325.157.627.3.89.427.042.02.084.04.124.06l.773-1.548a1 1 0 011.06-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2.694a1 1 0 01-.991-.883c-.49-4.964-3.521-9.015-7.9-10.935a.75.75 0 01-.12-1.304l1.434-.713a1 1 0 01.894.894l.582 3.493a1 1 0 01-.248.987l-1.332 1.948c.287.217.56.447.82.686.26.24.49.513.707.8l1.948-1.332a1 1 0 01.987-.248l3.493.582a1 1 0 01.894.894l.713 1.434a.75.75 0 01-1.304.12c-1.92-4.379-5.97-7.41-10.935-7.9z"></path>
            </svg>
            <div>
              <div class="font-bold">電話</div>
              <a href={`tel:${blok.phone || '090-XXXX-XXXX'}`} class="text-gray-200 hover:text-white transition-colors">
                {blok.phone || '090-XXXX-XXXX'}
              </a>
            </div>
          </div>

          <div class="flex items-start">
            <svg class="w-6 h-6 mr-4 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            <div>
              <div class="font-bold">所在地</div>
              <p class="text-gray-200">
                {blok.address ? (
                  <>
                    {blok.address}
                  </>
                ) : (
                  <>
                    日本<br/>
                    (詳細情報はお問合せください)
                  </>
                )}
              </p>
            </div>
          </div>
        </div>

        <!-- Social links -->
        <div class="flex gap-4">
          <a href="#" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2s9 5 20 5a9.5 9.5 0 00-9-5.5c4.75 2.25 7-7 7-7a10.6 10.6 0 01-9.5 5M9 19h6"/>
            </svg>
          </a>
          <a href="#" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M0 1.146C0 .513.526 0 1.175 0h21.65C23.474 0 24 .513 24 1.146v21.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 24 0 23.487 0 22.854V1.146zm6.943 4.268V21.75H3.618V5.414zm3.366 0v4.554c.604-1.796 2.013-2.989 4.735-2.989 3.644 0 6.397 2.766 6.397 8.713v5.858h-3.447v-5.592c0-1.979-.637-3.357-2.406-3.357-1.734 0-2.768 1.162-2.768 3.297v5.652h-3.461V5.414zm-11.04 0h3.366v16.336H-.771z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right - Contact form -->
      <div class="bg-white/10 backdrop-blur-md rounded-lg p-8 border border-white/20">
        <form class="space-y-6">
          <div>
            <label class="block text-sm font-medium mb-2">お名前 *</label>
            <input
              type="text"
              required
              class="w-full px-4 py-2 rounded-lg bg-white/5 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:border-accent-blue transition-colors"
              placeholder="お名前を入力してください"
            />
          </div>

          <div>
            <label class="block text-sm font-medium mb-2">メールアドレス *</label>
            <input
              type="email"
              required
              class="w-full px-4 py-2 rounded-lg bg-white/5 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:border-accent-blue transition-colors"
              placeholder="info@raiou.co.jp"
            />
          </div>

          <div>
            <label class="block text-sm font-medium mb-2">お問合せ内容 *</label>
            <textarea
              required
              rows={4}
              class="w-full px-4 py-2 rounded-lg bg-white/5 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:border-accent-blue transition-colors resize-none"
              placeholder="ご質問やご要望をお聞かせください"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-6 py-3 bg-accent-amber text-primary font-bold rounded-lg hover:bg-accent-amber/90 transition-colors"
          >
            送信する
          </button>
        </form>
      </div>
    </div>
  </div>

  <style>
    .bg-pattern {
      background-image:
        radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 1px);
      background-size: 40px 40px;
    }
  </style>
</section>
