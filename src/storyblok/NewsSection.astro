---
const { blok } = Astro.props

const news = [
  {
    id: 1,
    category: '企業新聞',
    title: '新製品シリーズ「プレミアム」発表',
    excerpt: '最新の医療技術を取り入れた新製品シリーズが発表されました。',
    date: '2024年11月1日',
    image: '/images/1.jpg',
  },
  {
    id: 2,
    category: '健康知識',
    title: 'サプリメント選びの基礎知識',
    excerpt: '正しいサプリメント選択で健康寿命を延ばす方法をご紹介します。',
    date: '2024年10月28日',
    image: '/images/2.jpg',
  },
  {
    id: 3,
    category: 'スポーツ',
    title: 'バドミントン上達の秘訣',
    excerpt: 'プロ選手による初心者向けバドミントントレーニングガイド。',
    date: '2024年10月25日',
    image: '/images/3.jpg',
  },
]
---

<section class="py-20 md:py-32 bg-background">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-6">
        {blok.title || '最新ニュース'}
      </h2>
      <p class="text-xl text-muted max-w-2xl">
        {blok.description || '莱歐からの最新情報、製品ニュース、健康情報をお届けします。'}
      </p>
    </div>

    <!-- News grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {news.map((article) => (
        <article class="group overflow-hidden rounded-lg border border-card-border bg-card hover:shadow-lg transition-all duration-300">
          <!-- Image -->
          <div class="relative overflow-hidden bg-gray-200 h-48">
            <img
              src={article.image}
              alt={article.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>

          <!-- Content -->
          <div class="p-6">
            <div class="flex items-center justify-between mb-3">
              <span class="inline-block px-3 py-1 bg-accent-blue/10 text-accent-blue text-xs font-bold rounded-full">
                {article.category}
              </span>
              <span class="text-sm text-muted">{article.date}</span>
            </div>

            <h3 class="text-lg font-bold text-primary mb-3 line-clamp-2 group-hover:text-accent-blue transition-colors">
              <a href="#">{article.title}</a>
            </h3>

            <p class="text-muted text-sm leading-relaxed mb-4 line-clamp-2">
              {article.excerpt}
            </p>

            <!-- Link -->
            <a
              href="#"
              class="inline-flex items-center text-accent-blue font-medium text-sm hover:gap-2 transition-all duration-300"
            >
              詳細を読む
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- View all button -->
    <div class="text-center">
      <a
        href="/news"
        class="inline-block px-8 py-4 bg-primary text-white font-medium rounded-lg hover:bg-primary-dark transition-colors"
      >
        すべてのニュースを見る
      </a>
    </div>
  </div>
</section>
